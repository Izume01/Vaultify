<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vault</title>
    <link rel="stylesheet" href="/css/container.css">
</head>
<body>
    <div class="overlay" id="overlay">
        <div class="modal">
            <h2>Add Vault Item</h2>
            <form id="vaultForm"  method="POST">
                <input type="hidden" name="container" value="">
                <div>
                    <label for="title">Title:</label>
                    <input type="text" name="title" required>
                </div>
                <div>
                    <label for="type">Type:</label>
                    <select name="type" required>
                        <option value="password">Password</option>
                        <option value="note">Note</option>
                        <option value="file">File</option>
                    </select>
                </div>
                <div>
                    <label for="data">Data:</label>
                    <input type="text" name="data" required>

                    <!-- <textarea 
                        id="message" 
                        name="message" 
                        rows="5" 
                        maxlength="300" 
                        placeholder="Write your message here (max 300 characters)..."></textarea>
                    <div id="char-count">0 / 300</div> -->

                    <!-- <input type="password" name="data" required> -->

                    <!-- <input type="file" name="data" required> -->
                </div>
                <!-- Add metadata fields as needed -->
                <button type="submit">Create</button>
            </form>
            <button class="close" id="closeOverlay">Close</button>
        </div>
    </div>

    <header>
        <h1>Vaultify    </h1>
        <button id="openOverlay">Add Item</button>
    </header>

    <section id="vaultItems">

    </section>

    <script>
        document.getElementById('openOverlay').addEventListener('click', function() {
            document.getElementById('overlay').style.display = 'flex';
        });

        document.getElementById('closeOverlay').addEventListener('click', function() {
            document.getElementById('overlay').style.display = 'none';
        });
    </script>
</body>
</html>